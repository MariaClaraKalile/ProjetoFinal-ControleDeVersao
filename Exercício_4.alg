algoritmo "NumeroPorExtenso"
var
   numero: inteiro

inicio
   escreval("Digite um número inteiro entre 1 e 100:")
   leia(numero)
   senao
      escolha numero
         caso 1
            escreval("Um")
         caso 2
            escreval("Dois")
         caso 3
            escreval("Três")
         caso 100
            escreval("Cem")
      fimescolha
   fimse
fimalgoritmo